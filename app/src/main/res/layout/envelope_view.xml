<?xml version="1.0" encoding="utf-8"?>
<com.example.wangyu.redevenlope.MyFramLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/envelope_detial" />

    <ImageView
        android:id="@+id/envelope_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/envelope_top" />

    <ImageView
        android:id="@+id/envelope_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/envelope_bottom" />

    <ImageView
        android:id="@+id/open"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</com.example.wangyu.redevenlope.MyFramLayout>